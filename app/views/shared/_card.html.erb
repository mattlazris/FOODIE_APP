    <!-- Post Content-->
    <div class="post-content">
      <div class="category"><%= meal.category %></div>
      <h1 class="title"><%= link_to meal.name, meal %></h1>
      <h2 class="sub_title"><%= link_to meal.user.name, host_path(meal.user) %></h2>
      <p class="description">
        <%= "About Me" %>
        <br>
        <%= meal.user.description %>
      </p>
